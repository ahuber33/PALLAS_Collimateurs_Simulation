#ifndef PARTICLE_DATA_HH
#define PARTICLE_DATA_HH

#include <string>
#include <mutex>
#include <queue>

// Structure pour stocker les donn√©es des particules
struct ParticleData {
    G4double x;
    G4double xp;
    G4double z;
    G4double zp;
    G4double s;
    G4double delta;
    G4int n;

     ~ParticleData() {
        std::cout << "Destruction de ParticleData "  << std::endl;
    }
  };

struct ThreadEventData {
    std::queue<ParticleData> eventQueue;
    std::mutex mutex;

};
#endif // PARTICLE_DATA_HH
